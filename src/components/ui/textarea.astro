---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"textarea"> {
  error?: boolean;
}

const { class: className, error = false, ...attrs } = Astro.props;
---

<textarea class:list={[className, {'error': error}]} {...attrs}/>

<style>
  textarea {
    border: 1px solid grey;
    border-radius: 8px;
    padding: 0.5rem 1rem;
    outline-color: wheat;

    &.error {
      outline-color: tomato;
      border: 2px solid tomato;
    }
  }
</style>
