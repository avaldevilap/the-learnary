---
import type { Session } from "@auth/core/types";
import { Auth, SignOut } from "auth-astro/components";
---

<header class="container mx-auto flex justify-between p-4">
  <!-- <div class="text-2xl font-bold">The Learnary</div> -->
  <img class="w-32" src="/logo.svg" alt="The Learnary" />
  <nav>
    <ul class="flex gap-4">
      <li><a href="/explore">Explore</a></li>
      <li>
        <Auth>
          {
            (session: Session) =>
              session ? (
                <SignOut params={{ callbackUrl: "/login", redirect: false }}>
                  Log out
                </SignOut>
              ) : (
                <a href="/login">Sign in</a>
              )
          }
        </Auth>
      </li>
    </ul>
  </nav>
</header>
