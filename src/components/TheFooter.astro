---
import { Image } from "astro:assets";
---

<footer class="p-4 border-t">
  <section class="grid place-items-center max-w-[90rem] mx-auto">
    <ul>
      <li>
        <a href="/">
          <Image
            src="/logo.svg"
            alt="The Learnary"
            width={128}
            height={32}
            loading="lazy"
          />
        </a>
      </li>
    </ul>
  </section>
</footer>

<style>
footer {
  background-color: white;
  padding: var(--size-3);
  /* border-top: var(--border-size-1) solid var(--color-border); */
}

section {
  display: grid;
  place-items: center;
  max-width: 90rem;
  margin-inline: auto;
}
</style>
