---
import AuthLayout from "@/layouts/AuthLayout.astro";
---

<AuthLayout title="Sign In | The Learnary">
  <main class="grid min-h-dvh place-items-center">
    <div class="flex flex-col items-center justify-center gap-4">
      <a
        class="bg-neutral-900 text-white hover:bg-neutral-900/90 shadow-sm"
        href="/login/github"
        data-github
      >
        Continue with GitHub
      </a>
    </div>
  </main>
</AuthLayout>

<style>
  main {
    min-height: 100dvh;

    div {
      margin-top: 30rem;
      max-width: fit-content;
      margin-inline: auto;
    }

    a {
      display: block;
      padding-inline: 1.75rem;
      padding-block: 1rem;
      border-radius: 1rem;
      font-weight: 600;
      color: black;
    }

    [data-github] {
      color: white;
      background-color: black;
      transition: all 300ms ease-in-out;
    }

    [data-github]:hover {
      box-shadow: var(--shadow);
    }
  }
</style>
