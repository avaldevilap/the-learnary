---
import Card from "@/components/card.astro";
import FeaturedList from "@/components/featured-list.astro";
import Layout from "@/layouts/Layout.astro";

const images = [
  "https://picsum.photos/seed/123/500.webp",
  "https://picsum.photos/seed/546/500.webp",
  "https://picsum.photos/seed/098/500.webp",
  "https://picsum.photos/seed/867/500.webp",
];
---

<Layout title="The Learnary">
  <main class="page-container" role="main">
    <FeaturedList
      title="Most Popular Certificates"
      subtitle="Specializations and Professional Certificates"
      description="Explore our most popular programs, get job-ready for an in-demand career."
    >
        { images.map((img) =>
            <Card role="listitem">
              <Fragment slot="header">
                <img src={img} alt="" />
              </Fragment>

              <Fragment slot="content">
                <h4>Google Data Analytics</h4>
                <p><small>Professional Certificate</small></p>
              </Fragment>
            </Card>
          )
        }
    </FeaturedList>
  </main>
</Layout>
