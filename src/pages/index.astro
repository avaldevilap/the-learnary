---
import FeaturedList from "@/components/featured-list.astro";
import Card from "@/components/ui/card.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="The Learnary">
  <main class="page-container" role="main">
    <FeaturedList
      title="Most Popular Certificates"
      subtitle="Specializations and Professional Certificates"
      description="Explore our most popular programs, get job-ready for an in-demand career."
    >
        { ["https://picsum.photos/345", "https://picsum.photos/345", "https://picsum.photos/345", "https://picsum.photos/345"].map((img) =>
            <Card role="listitem">
              <Fragment slot="header">
                <img src={img} alt="" />
              </Fragment>

              <Fragment slot="content">
                <h4>Google Data Analytics</h4>
                <p><small>Professional Certificate</small></p>
              </Fragment>
            </Card>
          )
        }
    </FeaturedList>
  </main>
</Layout>
